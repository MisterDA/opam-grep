opam-version: "2.0"
version: "0.4.0"
synopsis: "An opam plugin that greps anything in the sources of every opam packages"
license: "MIT"
maintainer: "Kate <kit.ty.kate@disroot.org>"
authors: "Kate <kit.ty.kate@disroot.org>"
homepage: "https://github.com/kit-ty-kate/opam-grep"
dev-repo: "git+https://github.com/kit-ty-kate/opam-grep.git"
bug-reports: "https://github.com/kit-ty-kate/opam-grep/issues"
flags: plugin
build: ["dune" "build" "-p" name "-j" jobs]
depends: [
  "ocaml" {>= "4.08"}
  "dune" {>= "2.0"}
  "progress" {>= "0.2.1"}
  "cmdliner" {>= "1.1.0"}
  "fpath" {>= "0.7.3"}
  "bos" {>= "0.2.0"}
]
available: os != "win32"
